package aula3;

public class Caneta {
	private String modelo; //O OBJETO NÃO VAI CONSEGUIR ACESSAR OS ATRIBUTOS SEM OS MÉTODOS GET/SET
	private float ponta;
	//MÉTODO CONSTRUTOR
	
	//MÉTODO ACESSOR
	public String getModelo() {
		return this.modelo;
	}
	
	//MÉTODO MODIFICADOR
	public void setModelo(String m) {
		this.modelo = m;
	}
	
	public float getPonta() {
		return this.ponta;
	}
	
	public void setPonta(float p) {
		this.ponta = p;
	}
	
	public void status() {
		System.out.println("=== SOBRE A CANETA ==== \nModelo: " + this.getModelo() + 
				"\nPonta: " + this.getPonta());
	}
}
